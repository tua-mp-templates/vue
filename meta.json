{
    "prompts": {
        "name": {
            "type": "string",
            "required": true,
            "label": "Project name"
        },
        "appid": {
            "type": "string",
            "required": true,
            "label": "appid",
            "default": "touristappid"
        },
        "description": {
            "type": "string",
            "required": true,
            "label": "Project description",
            "default": "A tua-mp project"
        },
        "author": {
            "type": "string",
            "label": "Author"
        },
        "license": {
            "type": "string",
            "label": "License",
            "default": "MIT"
        }
    },
    "skipInterpolation": ["src/**/*.wxml", "src/**/*.vue"],
    "completeMessage": "{{#inPlace}}To get started:\n\n  npm i\n  npm start{{else}}To get started:\n\n  cd {{destDirName}}\n  npm i\n  npm start{{/inPlace}}"
}
